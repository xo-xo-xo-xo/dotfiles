{
   "layer": "top",
   "position": "top",
   "output": "DP-3",

   "reload_style_on_change": true,

   "modules-left": [
      
      "hyprland/workspaces",
      "group/system",
      "network",
     "custom/weather",
 "custom/weather2",
 "tray"
   ],
   "modules-center": [
      "clock"
     
   ],
   "modules-right": [

   ],
   "clock": {
      "format": "<span color='#7897c1' rise='1500'>ÔÅ≥ </span>{:L%A %m/%d <span color='#9cbd8a' rise='1200'> ÔÄó </span>%I:%M %p}",
      "format-alt": "<span color='#c1a978'>{:%Y-%m-%d}</span>",
      "interval": 1,
      "tooltip-format": "<tt>{calendar}</tt>",
      "smooth-scrolling-threshold": 0.01,
      "calendar": {
         "mode": "year",
         "mode-mon-col": 3,
         "weeks-pos": "right",
         "on-scroll": 1,
         "format": {
            "months": "<span color='#bd8a99'><b>{}</b></span>",
            "days": "<span color='#9578c1'><b>{}</b></span>",
            "weeks": "<span color='#7897c1'><b>W{}</b></span>",
            "weekdays": "<span color='#9cbd8a'><b>{}</b></span>",
            "today": "<span color='#c1a978'><b><u>{}</u></b></span>"
         }
      },
      "actions": {
         "on-click-right": "mode",
         "on-scroll-up": "shift_up",
         "on-scroll-down": "shift_down"
      }
   },

       "custom/wlsunset": {
        "interval": "once",
        "exec": "if pgrep wlsunset >/dev/null 2>&1; then stdbuf -oL printf '{\"alt\": \"on\"}'; else stdbuf -oL printf '{\"alt\": \"off\"}'; fi",
        "on-click": "sh ~/scripts/wlsunset.sh",
        "signal": 1, // SIGRTMIN+1 or 35
        "return-type": "json",
        "format": "{icon}",
        "tooltip-format": "wlsunset: {alt}",
        "format-icons": {
            "off": "‚òÄÔ∏è",
            "on": "üåô"
        }
    },

   "power-profiles-daemon": {
  "format": "<span color='#bd8a99'>{icon}</span>",
  "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
  "tooltip": true,
  "format-icons": {
    "default": "ÔÉß",
    "performance": "ÔÉß",
    "balanced": "Ôâé",
    "power-saver": "ÔÅ¨"
  }
},

"hyprland/workspaces": {
      "all-outputs": false,
     
      "on-click": "activate",
      "persistent-only": "true",
     
   },




   "group/system": {
	"orientation": "inherit",
	"modules": [
	   "custom/cpuhistory",
      "custom/updates",
      "custom/gpu-usage",
		"cpu",
		"memory",
		"temperature"
    
	]
},

"network": {
    
    "format": "<span color='#9578c1' rise='1100'>ÔÅ£</span> {bandwidthDownBits}  <span color='#7897c1' rise='1100'>ÔÅ¢</span> {bandwidthUpBits} ",
    "max-length": 50
},


"custom/weather": {
    "exec": "${HOME}/scripts/get-weather.sh Portland+Oregon",
    "return-type": "json",
    "format": "{}",
    "tooltip": true,
    "interval": 1200
},

"custom/weather2": {
    "exec": "${HOME}/scripts/get-weather.sh Kristiansand+Norway",
    "return-type": "json",
    "format": "{}",
    "tooltip": true,
    "interval": 1200
},

"memory": {
    "interval": 30,
    "format": "<span color='#9cbd8a' rise='1050'>ÓøÖ</span> {}% ",
    "max-length": 10
},
"cpu": {
    "interval": 10,
    "format": "<span color='#c1a978' rise='1100' size='medium'>Ôãõ </span>{usage}%   ",
    "max-length": 10
},

 "temperature": {
    // "thermal-zone": 2,
    "hwmon-path": "/sys/devices/platform/coretemp.0/hwmon/hwmon5/temp1_input",
    // "critical-threshold": 80,
    // "format-critical": "{temperatureC}¬∞C Ôãá",
    "format": "  <span color='#bd8a99' rise='1100'>Ôãâ</span> {temperatureC}¬∞C"
},

"custom/gpu-usage": {
  "exec": "cat /sys/class/hwmon/hwmon8/device/gpu_busy_percent",
  "format": "<span color='#9578c1' rise='1000'>Û∞çπ</span> {}%   ",
  "return-type": "",
  "interval": 1
},



"custom/updates": {
    "format": "<span color='#7897c1' size='medium' rise='1300'>Û∞ÆØ</span> {}   ",
    "return-type": "json",
  
    "exec-if": "which waybar-module-pacman-updates",
    "exec": "waybar-module-pacman-updates --interval-seconds 5 --no-aur --network-interval-seconds 300"
},

  "tray": {
      "icon-size": 16,
      "spacing": 10
   },
   
   "hyprland/workspaces": {
      "all-outputs": false,
      "format": "{icon}",
      "on-click": "activate",
      "format-icons": {
         "1": "<span font_size='12pt'>Ôíâ</span>",
         "2": "<span font_size='14pt'>ÓùÖ</span>",
         "3": "<span font_size='12pt'>Û±éì</span>",
         "4": "<span font_size='12pt'>Ó©∫</span>"
      }
   },
 
}

