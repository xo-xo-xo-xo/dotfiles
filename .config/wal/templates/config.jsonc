{
        "layer": "top",
        "position": "top",
        "reload_style_on_change": true,
        "modules-left": ["hyprland/workspaces", "custom/updates", "group/tray"],
        "modules-center": ["mpris"],
        "modules-right": [ "clock","privacy", "group/audio", "group/misc", "custom/control-center"],
        "hyprland/workspaces": {
			"all-outputs": false,
 "format": "{icon}",
  "on-click": "activate",
  "format-icons": {
    "1":  "<span font_size='16pt'>Ôíâ </span>",
    "2":  "<span font_size='20pt'>ÓùÖ </span>",
    "3":  "<span font_size='16pt'>Û±éì </span>",
    "4": "<span font_size='16pt'>Ó©∫</span>",
}
		},
        "mpris": {
			"player": "tauon",
			"format": "{status_icon} {artist} - {title}",
			"format-stopped": "{status_icon}",
			"artist-len": 50,
			"title-len": 50,
			"player-icons": {
				"firefox": "Ôâ©",
				"chromium": "ÔÄÅ"
			},
			"status-icons": {
				"playing": "ÔÖÑ ",
				"paused": "Ôäã ",
				"stopped": "Ôäç "
			},
			"ignored-players": ["firefox"]
		},
		"group/audio":
		{
            "orientation": "inherit",
			"modules": [
					"pulseaudio#input", "pulseaudio#output"
			]
		},
		"group/perf":
		{
            "orientation": "inherit",
            "drawer": {
                "transition-duration": 500,
                "transition-left-to-right": false,
			   	"children-class": "perf-element",
				"click-to-reveal": "true"
            },
			"modules": [
				 "custom/perf-icon", "temperature", "cpu", "memory"
			]
		},
		"custom/perf-icon": {
			"tooltip": false,
			"format": "Ó¥Ø"
		},
		"group/misc":
		{
            "orientation": "inherit",
			"modules": [
				 "hyprland/language"
			]
		},
		"group/connection":
		{
			"orientation": "inherit",
			"modules": [
				"bluetooth", "network"
			]
		},
		"custom/control-center": {
            "tooltip": false,
            "format": "ÔÉâ‚Åü",
            "on-click": "swaync-client -t -sw",
            "escape": true
        },
        "clock": {
            "format": "{:L%A %d/%m - %I:%M %p}",
            "format-alt": "{:L%I:%M:%S %p}",
            "interval": 1,
            "tooltip-format": "<tt>{calendar}</tt>",
            "smooth-scrolling-threshold": 0.01,
            "calendar": {
                "mode"          : "year",
                "mode-mon-col"  : 3,
                "weeks-pos"     : "right",
                "on-scroll"     : 1,
                "format": {
                    "months":     "<span color='#ffead3'><b>{}</b></span>",
                    "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                    "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                    "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                    "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
                }
            },
            "actions":  {
                    "on-click-right": "mode",
                    "on-scroll-up": "shift_up",
                    "on-scroll-down": "shift_down"
            }
		},
        "network": {
            "format-wifi": "Ôá´ ",
            "format-ethernet":"ÓΩÑ‚Äâ",
            "format-disconnected": "Ó¨Å",
            "tooltip-format-disconnected": "Not connected",
            "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
            "tooltip-format-ethernet": "{ifname} üñß  ÔÉò {bandwidthUpBits} ÔÉó {bandwidthDownBits}",
            "on-click": "kitty --class floating -e nmtui"
        },
        "bluetooth": {
            "format": "Û∞ÇØ {status}",
            "format-on": "Û∞ÇØ",
            "format-off": "Û∞ÇØ off",
            "format-disabled": "Û∞Ç≤",
            "format-no-controller": "Û∞Ç≤",
	    	"format-connected-battery": "{device_battery_percentage}% Û∞ÇØ",
            "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
            "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
            "tooltip-format-enumerate-connected": "{device_alias}\n{device_address}",
            "tooltip-format-enumerate-connected-battery": "{device_alias}\n{device_address}\n{device_battery_percentage}%",
            "on-click-right": "blueman-manager"
        },
		"custom/updates": {
				"format": "{} {icon}",
				"return-type": "json",
				"format-icons": {
						"has-updates": "Û±ç∑",
						"updated": "Û∞Ç™"
				},
				"exec-if": "which waybar-module-pacman-updates",
				"exec": "waybar-module-pacman-updates --interval-seconds 5 --network-interval-seconds 300 --color-semver-updates --tooltip-align-columns"
		},
        "custom/endpoint":{
            "format": " ",
            "tooltip": false
        },
        "custom/tray-icon": {
            "format": "Û∞çª ",
            "tooltip": true,
		    "tooltip-format": "Tray",
			"rotate": 180
	    },
        "group/tray": {
            "orientation": "inherit",
            "drawer": {
                "transition-duration": 500,
                "transition-left-to-right": true,
			   	"children-class": "tray-element"
            },
            "modules": ["custom/tray-icon", "tray"]
		},
        "cpu": {
            "format": "{usage}% Ôíº",
            "tooltip": true
        },
        "memory": {
            "format": "{percentage}% ÓøÖ",
            "tooltip": true
		},
        "temperature": {
            "critical-threshold": 80,
            "format": "{temperatureC}¬∞ Ôãâ",
		    "hwmon-path": "/sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon1/temp1_input",
            "tooltip-format": "CPU: {temperatureC}¬∞C"
		},
        "tray": {
            "icon-size": 14,
            "spacing": 10
        },
		"privacy": {
			"icon-spacing": 10,
			"icon-size": 13,
			"transition-duration": 250,
			"modules": [
				{
					"type": "screenshare",
					"tooltip": true,
					"tooltip-icon-size": 24
				},
				{
					"type": "audio-in",
					"tooltip": true,
					"tooltip-icon-size": 24
				}
			],
			"ignore-monitor": true,
			"ignore": [
				{
					"type": "audio-in",
					"name": "cava"
				},
				{
					"type": "screenshare",
					"name": "obs"
				}
			]
		},
		"pulseaudio#input": {
     		"scroll-step": 1,
        	"format": "{format_source}",
        	"format-source": "<span color='#4b5738'>ÔÑ∞</span> {volume}%",
	        "format-source-muted": "ÔÑ± ",
			"tooltip-format": "{format_source}",
    		"on-click": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
		    "on-scroll-up": "pactl set-source-volume @DEFAULT_SOURCE@ +5%",
		    "on-scroll-down": "pactl set-source-volume @DEFAULT_SOURCE@ -5%"
		},
		"pulseaudio#output": {
     		"scroll-step": 1,
        	"format": "{icon} {volume}%",
	        "format-bluetooth": "Û∞Ç∞",
        	"format-bluetooth-muted": "{format_muted}",
	        "format-muted": "ÔÄ¶",
        	"format-icons": {
       			"headphone": "ÔÄ•‚Äâ",
            	"headset": "Óπô‚Äâ",
       	    	"default": [     "<span color='#4b5738'>ÔÄß </span>",
    "<span color='#4b5738'>ÔÄß </span>",
    "<span color='#4b5738'>ÔÄ® </span>",
    "<span color='#4b5738'>ÔÄ® </span>"
    ]
		    },
			"tooltip-format": "{desc}",
	        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
	        "on-click-right": "pavucontrol"
		},
		"hyprland/language": {
			"format": "<span color='#ffcc66'>Û∞•ª</span>  {}",

			"format-en": "Engelsk",
			"format-no": "Norsk",
			"tooltip": true
		}
}
